@model LibraryModel.UserModel
@{
    ViewBag.Title = "User_list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" id="content_zip">
    <div class="row">
        <div class="col-xl-12 col-md-12 mb-2">
            <div class="card border-left-custom2 shadow h-100 py-2">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tbuser" class="hrtable col-sm-12 col-md-12">
                            <thead>
                                <tr>
                                    <th>UserID:</th>
                                    <th>UserName:</th>
                                    <th>Password</th>
                                </tr>
                                @*<tr><td><a href="#" title="delete" class="delete" onclick="return confirm('Are you sure you want to delete this item')">Delete</a></td></tr>*@
                            </thead>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            var table = $('#tbuser').DataTable(
                {
                    "language": {
                        "info": "Display _START_ to _END_ of _TOTAL_ records",
                    },
                    "oLanguage": {
                        "sLengthMenu": "Display _MENU_ records",
                    },

                    "ajax": {
                        "url": "../User/GetUserList",
                        "type": "GET",
                        "datatype": "json",
                        "dataSrc": ""
                    },
                    "columns": [
                        {
                            "data": "BookID", "render": function (data, type, row) {
                                return '<a href="../User/User_Entry/' + row.UserID + '">' + row.UserID + '</a>';
                            },
                        },
                        { "data": "UserName", orderable: false, "width": "13%" },
                         { "data": "Password", orderable: false, "width": "13%" }
                    ],
                }
            );
        });
    </script>
    }
